
@{
    ViewBag.Title = "BankaRapor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper">
    <div class="row">
        <div class="col-sm-12">
            <form id="searchOrderForm" autocomplete="off">
                <div class="form-group col-lg-2">
                    <label>Başlangış Tarih</label>
                    <input type="text" class="form-control form_datetime" id="SDATE" name="SDATE" value="@DateTime.Now.ToString("yyyy-MM-dd")">
                </div>
                <div class="form-group col-lg-2">
                    <label>Bitiş Tarih</label>
                    <input type="text" class="form-control form_datetime" id="EDATE" name="EDATE" value="@DateTime.Now.ToString("yyyy-MM-dd")">
                </div>
                <div class="form-group col-lg-2">
                    <label>Banka Trans Id</label>
                    <input type="text" class="form-control" id="BANKTRANS_ID" name="BANKTRANS_ID" value="">
                </div>
                <div class="form-group col-lg-2">
                    <label>Statu</label>
                    <select class="form-control" id="STATU" name="STATU" value="">
                        <option value="">Hepsi</option>
                        <option value="01">Bekliyor</option>
                        <option value="02">Hatalı</option>
                        <option value="03">Kapandı</option>
                        <option value="04">Koruma Hesabında</option>
                        <option value="05">İptal Edildi</option>
                        <option value="06">Şüpheli</option>
                        <option value="07">Koruma Hesabından İade</option>
                        <option value="99">Diğer Banka Hrk</option>
                    </select>
                </div>
                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-md-2">
                            <input type="button" id="ListBtn" class="form-control btn btn-success" value="Sorgula" />
                        </div>
                    </div>
                </div>
            </form>
            <br>
        </div>
        <div class="col-sm-12">
            <section class="panel">
                <header class="panel-heading">
                    Ürünler
                    <span class="tools pull-right">
                        <a href="javascript:;" class="fa fa-chevron-down"></a>
                    </span>
                </header>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped" id="TableBody"></table>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>